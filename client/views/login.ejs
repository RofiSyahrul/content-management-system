<!DOCTYPE html>
<html>

<head>
  <title>Login | Content Management System</title>
  <%include ./partials/head%>
  <link rel="stylesheet" href="/stylesheets/floating-labels.css">
</head>

<body class="body-dashboard not-privilege" style="display: none">
  <!-- adapted from: https://startbootstrap.com/snippets/login/ https://startbootstrap.com/snippets/registration-page/ -->
  <div class="container container-dashboard">
    <div class="row">
      <div class="col-12 col-sm-10 col-lg-10 col-xl-9 mx-auto">
        <div class="card card-signin flex-row my-5" id="card">
          <div class="card-img-left d-none d-md-flex d-sm-none align-items-center">
          </div>
          <div class="card-body">
            <div class="card border-light">
              <div class="card-header bg-transparent justify-content-center text-center">
                <img src="/images/rho-pi.png" alt="" width="36" height="36">
                <h6>Content Management System</h6>
                <div class="alert alert-danger" id="alertRegLogin" style="display: none"></div>
                <ul class="nav nav-tabs card-header-tabs justify-content-center">
                  <li class="nav-item">
                    <a class="nav-link active" href="" id="loginTab">Login</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="" id="registerTab">Register</a>
                  </li>
                </ul>
              </div>
              <div class="card-body">
                <!-- LOGIN -->
                <form class="form-signin" id="login">
                  <div class="form-label-group">
                    <input type="email" id="email" class="form-control" placeholder="Email address" required autofocus>
                    <label for="email">Email address</label>
                  </div>

                  <div class="form-label-group">
                    <input type="password" id="password" class="form-control" placeholder="Password" required>
                    <label for="password">Password</label>
                  </div>

                  <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Log in</button>
                  <hr class="my-4">
                  <button class="btn btn-lg btn-google btn-block text-uppercase" type="button" style="display: none"><i
                      class="fa fa-google mr-2"></i> Log in with Google</button>
                  <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="button"
                    style="display: none"><i class="fa fa-facebook mr-2"></i> Log in with Facebook</button>
                </form>
                <!-- REGISTER -->
                <form class="form-signin" id="register" style="display: none">
                  <div class="form-label-group">
                    <input type="email" id="regEmail" class="form-control" placeholder="Email address" required>
                    <label for="regEmail">
                      Email address
                      <span id="alertEmail" style="display: none"></span>
                    </label>
                  </div>

                  <div class="form-label-group">
                    <input type="password" id="regPassword" class="form-control" placeholder="Password" required>
                    <label for="regPassword">
                      Password
                      <span id="alertPw" style="display: none"></span>
                    </label>
                  </div>

                  <div class="form-label-group">
                    <input type="password" id="regConfirmPassword" class="form-control" placeholder="Password" required>
                    <label for="regConfirmPassword">
                      Confirm password
                      <span id="alertCpw" style="display: none"></span>
                    </label>
                  </div>

                  <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Register</button>
                  <hr class="my-4">
                  <button class="btn btn-lg btn-google btn-block text-uppercase" type="button" style="display: none"><i
                      class="fa fa-google mr-2"></i> Sign up with Google</button>
                  <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="button"
                    style="display: none"><i class="fa fa-facebook mr-2"></i> Sign up with Facebook</button>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% include ./partials/scripts %>
  <script type="text/javascript">
    $.ajax({
      url: "http://localhost:3001/api/users/check",
      method: "POST",
      beforeSend: function (request) {
        request.setRequestHeader("Authorization", localStorage.getItem("token"));
      }
    }).done(response => {
      if (response.valid) window.location = '/home';
      else $('.not-privilege').show();
    });
  </script>
  <script type="text/javascript" src="/javascripts/change-height.js"></script>
  <script type="text/javascript" src="/javascripts/login-register.js"></script>
</body>

</html>