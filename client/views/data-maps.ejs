<!DOCTYPE html>
<html>

<head>
  <title>Data Maps | Content Management System</title>
  <%include ./partials/head%>
  <style>
    .hidden {
      display: none !important
    }

    .invalid-input {
      background-color: rgba(243, 126, 126, 0.1) !important;
      border-color: #F37E7E !important;
      box-shadow: 0 0 10px #F37E7E !important
    }
  </style>
</head>

<body class="privilege not-home" style="display: none">
  <%include ./partials/header%>
  <main role="main" class="container">
    <div class="card border-light mx-1 mt-1">
      <div class="card-header bg-transparent justify-content-between row">
        <div class="col-auto">
          <h1>Data Maps</h1>
        </div>
        <div class="col-auto">
          <a href="/map" class="mx-2" style="color:lightseagreen;">
            <i class="fa fa-globe fa-2x" aria-label="Maps" aria-hidden="false"></i>
          </a>
        </div>
      </div>
      <div class="card-body">
        <!-- add button, and pagination options -->
        <div class="row justify-content-between">
          <div class="col-12 col-sm-auto">
            <div class="row">
              <div class="col-12 col-sm-auto">
                <a role="button" class="btn btn-primary" href="" id="addButton">
                  <i class="fa fa-plus" aria-hidden="true"></i>Add
                </a>
                <a role="button" class="btn btn-danger" href="" id="cancelAdd" style="display: none;">
                  <i class="fa fa-times mr-2" aria-hidden="true"></i>Cancel
                </a>
              </div>
            </div>
          </div>
          <div class="col-12 col-sm-auto my-1">
            <div class="row form-group">
              <div class="col-5 col-sm-auto" style="margin-right: -1.4rem !important">
                <select class="selectpicker form-control" id="selectLimit">
                  <option value="10" selected>10</option>
                  <option value="25">25</option>
                  <option value="50">50</option>
                  <option value="all">All</option>
                </select>
              </div>
              <div class="col-7 col-sm-auto my-auto rfs">Rows per page</div>
            </div>
          </div>
        </div>
        <div class="row mb-3 justify-content-between">
          <form class="form-inline mx-3" id="add" style="display: none">
            <input type="text" class="form-control mb-2 mr-sm-2" id="addTitle" placeholder="Title" required>
            <input type="number" class="form-control mb-2 mr-sm-2" id="addLat" placeholder="Latitude" step="0.00000001"
              required readonly>
            <input type="number" class="form-control mb-2 mr-sm-2" id="addLong" placeholder="Longitude"
              step="0.00000001" required readonly>
            <button type="submit" class="btn btn-primary mb-2" id="saveMap">Save</button>
          </form>
        </div>


        <div class="alert alert-success" id="alertData" style="display: none"></div>
        <div class="alert alert-danger" id="alertDataDanger" style="display: none"></div>

        <div class="row justify-content-between">
          <div class="col-12 col-sm-auto">
            <!-- SEARCH FORM -->
            <form class="form-inline">
              <input type="text" class="form-control mb-2 mr-sm-2" id="searchTitle" placeholder="Search title">
              <a href="" role="button" id="resetSearch" class="btn btn-danger mb-2 ml-sm-2">
                <i class="fa fa-undo mr-2" aria-hidden="true"></i>Reset
              </a>
            </form>
          </div>
          <div class="col-12 col-sm-auto">
            <!-- PAGINATION -->
            <nav id="pagination" aria-label="Table page" class="table-responsive mb-2">
              <ul class="pagination text-center" id="pages"></ul>
            </nav>
          </div>
        </div>

        <div class="card border-light my-1">
          <div class="card-body">
            <!-- TABLE -->
            <div class="table-responsive table-fix-head">
              <table class="table table-striped table-sm">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col" class="th-sm">#</th>
                    <th scope="col" class="th-sm">Title</th>
                    <th scope="col" class="th-sm">Latitude</th>
                    <th scope="col" class="th-sm">Longitude</th>
                    <th scope="col" class="th-sm">Actions</th>
                  </tr>
                </thead>
                <tbody id="data"></tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </main>
  <% include ./partials/scripts %>
  <!-- SWEET ALERT -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
  <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDvp5CKHX1e1_TP_JizSu5gW4oS4rb1Yy0"></script>
  <script type="text/javascript" src="/javascripts/user-privilege.js"></script>
  <script type="text/javascript" src="/javascripts/pagination.js"></script>
  <script type="text/javascript" src="/javascripts/data/maps.js"></script>
</body>

</html>