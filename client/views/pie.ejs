<!DOCTYPE html>
<html>

<head>
  <title>Pie Chart | Content Management System</title>
  <%include ./partials/head%>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.css">
  <style>
    .custom-radio .custom-control-label::before {
      background-color: whitesmoke;
    }
  </style>
</head>

<body class="body-dashboard">
  <div class="container align-content-center justify-content-between" style="margin-top: 15vh; margin-bottom: 15vh;">
    <!-- <div class="row justify-content-between align-self-center"> -->
    <!-- <div class="col-12 col-sm-9 h-100 mt-2"> -->
    <div class="card bg-transparent mx-2" id="card">
      <div class="card-header bg-dark text-white justify-content-between row">
        <div class="col-auto">
          <h3><i class="fa fa-pie-chart mr-2" aria-hidden="true"></i>Pie chart</h3>
        </div>
        <div class="col-auto">
          <a href="/" class="mx-2" style="color:whitesmoke;"><i class="fa fa-home fa-2x"></i></a>
          <a href="/data" class="mx-2" style="color:whitesmoke; display: none;"><i class="fa fa-table fa-2x"
              aria-hidden="true"></i></a>
        </div>
      </div>
      <div class="card-body justify-content-between">
        <div class="row justify-content-between">
          <div class="col-12 col-sm-auto justify-content-center mx-auto">
            <div id="pieChart"></div>
          </div>
          <div class="col-12 col-sm-auto mx-auto">
            <div class="card bg-transparent">
              <div class="form-group">
                <h6 class="card-header bg-dark text-white">
                  <i class="fa fa-calculator" aria-hidden="true"></i>Frequency accumulator
                </h6>
                <div class="card-body">
                  <div id="freqOpt">
                    <div class="custom-control custom-radio">
                      <input type="radio" id="maxFreq" name="freq" class="custom-control-input" value="maxFreq">
                      <label for="maxFreq" class="custom-control-label">Maximum</label>
                    </div>
                    <div class="custom-control custom-radio">
                      <input type="radio" id="minFreq" name="freq" class="custom-control-input" value="minFreq">
                      <label for="minFreq" class="custom-control-label">Minimum</label>
                    </div>
                    <div class="custom-control custom-radio">
                      <input type="radio" id="sumFreq" name="freq" class="custom-control-input" value="sumFreq">
                      <label for="sumFreq" class="custom-control-label">Sum</label>
                    </div>
                    <div class="custom-control custom-radio">
                      <input type="radio" id="avgFreq" name="freq" class="custom-control-input" value="avgFreq">
                      <label for="avgFreq" class="custom-control-label">Average</label>
                    </div>
                    <div class="custom-control custom-radio">
                      <input type="radio" id="countFreq" name="freq" class="custom-control-input" value="countFreq">
                      <label for="countFreq" class="custom-control-label">Count</label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- </div> -->
    <!-- <div class="col-12 col-sm-3 mt-2 h-100"> -->
    <!-- </div> -->
    <!-- </div> -->
  </div>
  <% include ./partials/scripts %>
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script type="text/javascript" src="/javascripts/change-height.js"></script>
  <script type="text/javascript" src="/javascripts/charts/pie.js"></script>
</body>

</html>